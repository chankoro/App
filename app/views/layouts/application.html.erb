     <ul class="nav navbar-nav navbar-right">
   <%#ログイン済みのユーザーの場合%>
      <% if logged_in? %>
       <li>
        <%= link_to "#" do %>
         <!--<%= image_tag "#" %>-->
        <% end %>
       </li>
       <li>
        <%= link_to "#" do %>
         <!--<%= image_tag "#" %>-->
        <% end %>
       </li>
       <li>
        <%= link_to "#" do %>
         <!--<%= image_tag "#" %>-->
        <% end %>
       </li>
       <li>
        <%= link_to logout_path, method: :delete do %>
         <!--<%= image_tag "#" %>-->
        <% end %>
       </li>
 <%#ログインしていないor新規ユーザーの場合%>
      <% else %>
       <li>
        <%= link_to new_user_path do %>
         <!--<%= image_tag "#" %>-->
        <% end %>
       </li>
       <li>
        <%= link_to login_path do %>
         <!--<%= image_tag "#" %>-->
        <% end %>
       </li>
      <% end %>
     </ul>
    </div>
 </nav>

    
    <%= yield %>

  </body>
</html>

